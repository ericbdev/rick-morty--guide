{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@wiki/apollo": ["packages/data/apollo-client"],
      "@wiki/apollo/*": ["packages/data/apollo-client/*"],
      "@wiki/codegen/*": ["packages/data/codegen/*"],
      "@wiki/gql/query/*": [
        "packages/data/models/Character/*.ts",
        "packages/data/models/Episode/*.ts"
      ],
      "@wiki/components/*": ["packages/core/components/*"],
      "@wiki/containers/*": ["packages/core/containers/*"],
      "@wiki/structure/*": ["packages/core/structure/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "./@types/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
