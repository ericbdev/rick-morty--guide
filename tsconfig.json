{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@instances/*": ["libs/instances/*"],
      "@api/*": ["libs/gql/*"],
      "@components/*": ["libs/ux/components/*"],
      "@containers/*": ["libs/ux/containers/*"],
      "@structure/*": ["libs/ux/structure/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "libs/apollo-client.ts"],
  "exclude": ["node_modules"]
}
