{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@wiki/apollo/*": ["packages/data/apollo-client/*"],
      "@wiki/codegen/*": ["packages/data/codegen/*"],
      "@wiki/gql/query/*": [
        "packages/data/models/Character/*.ts",
        "packages/data/models/Episode/*.ts"
      ],
      "@wiki/components/*": ["packages/core/components/*"],
      "@wiki/containers/*": ["packages/core/containers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
