{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@wiki/apollo": ["packages/data/apollo-client"],
      "@wiki/apollo/*": ["packages/data/apollo-client/*"],
      "@wiki/codegen/*": ["packages/data/codegen/*"],
      "@wiki/gql/*": ["packages/data/gql/*"],
      "@wiki/components/*": ["packages/ui/components/*"],
      "@wiki/containers/*": ["packages/ui/containers/*"],
      "@wiki/features/*": ["packages/features/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "./@types/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
